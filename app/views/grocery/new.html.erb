<h3> Add item to Grocery List </h3>

<%= form_with scope: :grocery do |form| %>
  <div class="row">
    <div class="col s10">
      <p>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
      </p>
    </div>

    <div class="col s2">
      <p>
        <%= form.label :quantity %><br>
        <%= form.text_field :quantity %>
      </p>
    </div>

  </div>
  <p>
    <%= form.submit class: "waves-effect waves-light btn" %>
  </p>
<% end %>
